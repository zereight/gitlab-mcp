# GitLab MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Required: Your GitLab personal access token
GITLAB_PERSONAL_ACCESS_TOKEN=your-actual-gitlab-token-here

# Required: Comma-separated list of allowed project IDs for security
GITLAB_ALLOWED_PROJECT_IDS=your-project-id-here

# Optional: Your GitLab API URL (Default: https://gitlab.com/api/v4)
GITLAB_API_URL=https://gitlab.com/api/v4

# Optional: Enable read-only mode for enhanced security (Default: false)
GITLAB_READ_ONLY_MODE=false

# Optional: Regular expression to exclude specific tools for security
# Examples:
# GITLAB_DENIED_TOOLS_REGEX=create.*|delete.*|update.*  # Exclude all create/delete/update operations
# GITLAB_DENIED_TOOLS_REGEX=(?i)pipeline.*              # Exclude pipeline tools (case-insensitive)
# GITLAB_DENIED_TOOLS_REGEX=                          # Leave empty to allow all tools
GITLAB_DENIED_TOOLS_REGEX=

# Optional: Enable/disable specific feature sets (Default: false)
USE_GITLAB_WIKI=false
USE_MILESTONE=false
USE_PIPELINE=false

# Optional: Server transport modes (Default: false)
SSE=false
STREAMABLE_HTTP=false

# Optional: Server configuration
HOST=0.0.0.0
PORT=3002
LOG_LEVEL=info

# Optional: Proxy configuration (if needed)
# HTTP_PROXY=http://your-proxy:port
# HTTPS_PROXY=http://your-proxy:port
# NODE_TLS_REJECT_UNAUTHORIZED=0

# Optional: Authentication cookie path (for cookie-based authentication)
# GITLAB_AUTH_COOKIE_PATH=/path/to/cookies

# Optional: CA certificate path (for self-signed certificates)
# GITLAB_CA_CERT_PATH=/path/to/ca-cert.pem

# Optional: GitLab instance specific settings
# GITLAB_IS_OLD=false  # Set to true for older GitLab instances
# GITLAB_COMMIT_FILES_PER_PAGE=20  # Files per page for commit diffs
